<% provide(:title, 'Recipes') %>
<h1 class="page_header">Your Recipes</h1>
<%= link_to "Create New Recipe", new_recipe_path, class: "btn btn-small btn-inverse" %>

<ul class="recipes">
  <% @recipes.each_with_index do |recipe| %>
    <%= link_to recipe.name, recipe_path(recipe) %>
  <% end %>
</ul>
