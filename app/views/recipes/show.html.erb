<% provide(:title, @recipe.name) %>
<h1 class="recipe_name"><%= @recipe.name %></h1>

<% if current_user %>
  <%= link_to "Favorite", favorite_recipe_path(@recipe, type: "favorite"), method: :put, class: "btn btn-medium btn-success" %>
  <%= link_to "Unfavorite", favorite_recipe_path(@recipe, type: "unfavorite"), method: :put, class: "btn btn-medium btn-warning" %>
<% end %>

<h3>Description</h3>
<p class="recipe_description"><%= @recipe.description %></p>

<h3>Ingredients</h3>

  <% @recipe_ingredients.each do | ingredient | %>
    <p class="recipe_ingredients"><%= ingredient.ingredient_name %>
    <%= ingredient.amount %>
    <%= ingredient.unit %>
  <% end %></p>

<h3 class="recipe_instructions">Instructions</h3>
<p><%= @recipe.instructions %></p>

<%= commontator_thread(@recipe) %>
